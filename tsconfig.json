{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/esm",
    "baseUrl": "src"
  },
  "include": [
    "./src"
  ],
  "exclude": ["node_modules", "./src/tests"]
}
